@model SpmsApp.ViewModels.CoursePloPerformanceOwnViewModel

<div class="row">
    <div class="col">@Html.Partial("TopBar")</div>
</div>

<div class="row">
    <div class="col-2">
        @Html.Partial("FacultySidebar")
    </div>
    <div class="col">
        <form method="POST">
            <label for="selectedCourse">Select a course:</label>
            <select name="selectedCourse">
                <option value="">Selelct a Course</option>
                @foreach (var course in Model.Courses)
                {
                    <option value=@course.CourseID>@course.CourseName</option>
                }
            </select>
            <input type="submit" value="Submit">
        </form>

        @if (Model.PloScores != null)
        {
            <div style="width: 50%;">
                <canvas id="ploChart"></canvas>
            </div>
        }
    </div>
</div>

<script>
    let ploChart = document.getElementById('ploChart').getContext('2d');

    let chart = new Chart(ploChart, {
        type: 'bar',
        data: {
            labels: ['a', 'b', 'c'],
            datasets: [{
                label: 'Demo',
                data: [10, 25, 69]
            }]
        },
        option: {
            maintainAspectRatio: true
        }
    })
</script>